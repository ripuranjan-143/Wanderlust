<% layout('/layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-3 ps-5">
    <h3><%= listing.title %></h3>
    <div class="card listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="listing_image"
        style="width: 60%; height: 40vh"
      />
      <div class="card-body">
        <p class="card-text mt-1" style="width: 60%">
          <%= listing.description %><br />&#8377; <%=
          listing.price.toLocaleString("en-IN") %><br /><%= listing.location
          %><br /><%= listing.country %>
        </p>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-8 offset-3 ps-5">
    <form
      method="get"
      action="/listings/<%=listing._id%>/edit"
      class="d-inline"
    >
      <button class="btn show-edit-btn btn-edit">Edit</button>
    </form>
    <form
      method="post"
      action="/listings/<%=listing._id%>?_method=delete"
      class="d-inline"
    >
      <button class="btn btn-dark">Delete</button>
    </form>
  </div>
</div>

<!-- Create Review -->
<div class="col-5 offset-3 ps-5">
  <hr />
  <h4>Leave a Review</h4>
  <form
    method="post"
    action="/listings/<%= listing._id %>/reviews"
    novalidate
    class="needs-validation"
  >
    <div class="my-3">
      <label for="rating" class="form-label">Rating</label>
      <input
        type="range"
        min="1"
        max="5"
        id="rating"
        name="review[rating]"
        class="form-range"
      />
    </div>
    <div class="my-3">
      <label for="comment" class="form-label">Comments</label>
      <textarea
        rows="5"
        id="comment"
        name="review[comment]"
        class="form-control"
        required
      ></textarea>
      <div class="invalid-feedback">Please add some comments for review!</div>
    </div>
    <button class="btn btn-outline-dark">Submit</button>
  </form>
</div>

<!-- Show Review -->
<div class="row" style="margin: 30px 150px 0px 180px;">
  <h3 class="ms-4 mb-3">All Reviews</h3>
  <div class="row">
    <% for (review of listing.reviews) { %>
    <div class="card col-5 ms-3 mb-3">
      <div class="card-body">
        <h5 class="card-title">@ripu</h5>
        <p class="card-text"><%= review.comment %></p>
        <p class="card-text"><%= review.rating %>stars</p>
      </div>
      <form
          class="mb-3"
          method="post"
          action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete"
        >
          <button class="btn btn-sm btn-dark">Delete</button>
        </form>
    </div>
    <% } %>
  </div>
</div>

