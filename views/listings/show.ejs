<% layout('/layouts/boilerplate') %>

<!-- Listing Details -->
<div class="row justify-content-center">
  <div class="col-12 col-md-9 col-lg-6">
    <h3 class="mb-2 listing-title mx-auto">
      <%= listing.title %>
    </h3>
    <div class="card listing-card mx-auto">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img img-fluid"
        alt="listing_image"
        style="height: 40vh; width: 98%"
      />
      <div class="card-body text-start">
        <p class="card-text">Owned by : <i><%= listing.owner.username %></i></p>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text">
          &#8377; <%= listing.price.toLocaleString("en-IN") %>
        </p>
        <p class="card-text"><%= listing.location %></p>
        <p class="card-text"><%= listing.country %></p>
      </div>
    </div>
  </div>
</div>

<!-- Edit/Delete Buttons -->
<% if (currUser && currUser._id.equals(listing.owner._id)) { %>
<div class="row justify-content-center mt-3">
  <div class="col-12 col-md-9 col-lg-6">
    <div class="mx-auto" >
      <form
        method="get"
        action="/listings/<%=listing._id%>/edit"
        class="d-inline"
      >
        <button class="btn show-edit-btn btn-edit">Edit</button>
      </form>
      <form
        method="post"
        action="/listings/<%=listing._id%>?_method=delete"
        class="d-inline"
      >
        <button class="btn btn-dark">Delete</button>
      </form>
    </div>
  </div>
</div>
<% } %>

<!-- Create Review -->
<div class="row justify-content-center mt-4">
  <div class="col-12 col-md-9 col-lg-6">
    <div class="mx-auto">
      <% if(currUser) { %>
      <h4 class="mb-3">Leave a Review</h4>
      <form
        method="post"
        action="/listings/<%= listing._id %>/reviews"
        novalidate
        class="needs-validation"
      >
      <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-slot">
          
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>

        <div>
          <label for="comment" class="form-label">Comments</label>
          <textarea
            rows="5"
            id="comment"
            name="review[comment]"
            class="form-control mb-3"
            required
          ></textarea>
          <div class="invalid-feedback">
            Please add some comments for review!
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
      <% } %>
    </div>
  </div>
</div>

<!-- Show Reviews -->
<% if(listing.reviews.length > 0) { %>
<div class="row justify-content-center mt-4">
  <hr />
  <div class="col-12 col-md-9 col-lg-9 mt-3">
    <div class="mx-auto">
      <h3 class="mb-3">All Reviews</h3>
      <div class="row">
        <% for (review of listing.reviews) { %>
        <div class="col-6 mb-3">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title ms-3 mt-2">
                @ <%= review.author.username %>
              </h5>
              <p class="card-text ms-3 me-2"><%= review.comment %></p>
              <p
                class="starability-result card-text ms-3"
                data-rating="<%= review.rating %>"
              ></p>
            </div>
            <form
              class="my-2 ms-4"
              method="post"
              action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete"
            >
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
<% } %>
